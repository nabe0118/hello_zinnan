<!DOCTYPE html>
<html>
  <head>
    <title>ECsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <li class="">
     <%= link_to '管理者ログイン', new_admin_session_path %>
    </li>
     <li>
      <%= link_to "admin_log out", destroy_admin_session_path, method: :delete %>
    </li>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="app-titile">ECsite</span>
        </nav>
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <%# ここからlink_toとpathを追加%>
                <li class="">
                  <%= link_to 'ECsite', cds_path, class: "glyphicon glyphicon-home" %>
                </li>
                <li class="">
                  <%= link_to 'Users', class: "glyphicon glyphicon-user"%>
                </li>
                <li class="">
                  <%= link_to  'Books', class: "glyphicon glyphicon-book" %>
                </li>
                <li class="">
                  <%= link_to 'logout',destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to 'ECsite', cds_path, class: "glyphicon glyphicon-home" %>
                </li>
                <li class="">
                  <%= link_to  'About', class: "glyphicon glyphicon-link" %>
                <li class="Sign Up">
                  <%= link_to 'Sign up',new_user_registration_path, class: "glyphicon glyphicon-edit" %>
                </li>
                <li class="">
                  <%= link_to  'login',new_user_session_path,  class: "glyphicon glyphicon-log-in" %>
                </li>
              <% end %>
              <%= link_to("URL") do %>
                <span class = "glyphicon glyphicon-shopping-cart" = "true"></span>
              <% end %>
      </div>
    </nav>

    <%= yield %>

  </body>

  <div class="container">
    <div class="row">
      <div class="col-md-3 col-md-offset-9">
        <p>CopyRight hello zinnan.inc</p>
      </div>
    </div>
  </div>

</html>

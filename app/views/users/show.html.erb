<% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
<% end %>

  <h2>＜ユーザー情報＞</h2>
  <table>

   <tbody>
  	<tr>
  		<th>名前</th>
  		<td><%= @user.family_name %><%= @user.first_name %></td>
  	</tr>
  	<tr>
  		<th>ナマエ</th>
  		<td><%= @user.sei %><%= @user.mei %></td>
  	</tr>
  	<tr>
  		<th>郵便番号１</th>
  		<td><%= @user.postal_code %></td>
  	</tr>
  	<tr>
  		<th>住所</th>
  		<td><%= @user.address %></td>
      <td><%= link_to 'その他の住所', addresses_path %></td>
      <td><%= link_to '宛先追加',new_address_path %></td>
    </tr>
    	<th>電話番号</th>
    	<td><%= @user.phone_number%></td>
    </tr>
    <tr>
    	<th>メールアドレス</th>
    	<td><%= @user.email %></td>
    </tr>
    <tr>
    	<th>パスワード</th>
    	<td><%= @user.password %></td>
    </tr>
    <tr>
    	<th>List Item</th>
    	<td></td>
    </tr>
   </tbody>
  </table>

  <div class="edit-unsubscribe">
    <p>
  	 <%= link_to '編集', edit_user_path %>

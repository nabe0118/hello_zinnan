<div class="container">
  <div class="row">

    <% if @label.errors.any? %>
      <% @label.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

    <div class="col-xs-4">
      <h3>レーベル編集</h3>
      <%= form_for @label, :url => {:action => :update} do |f| %>
        <%= f.label :レーベル名  %><br>
        <%= f.text_field :name %><br>
        <%= f.submit class:"btn btn-success"%>
      <% end %>
    </div>
    <div class="col-xs-5">
      <h3>レーベル一覧</h3>
      <table class="table">
        <tbody>
          <% @labels.each do |label| %>
            <tr>
              <td>レーベル名</td>
              <td><%= label.name %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

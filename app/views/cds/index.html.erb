<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<div class="index-content">
  <div class="container">
    <div class="row">
      <h1 class="header">CD一覧</h1>
        <% @cds.each do |cd| %>
          <div class="col-lg-3">
            <div class="card">
              <h4 class="card-header">
                <%= cd.name %>
              </h4>
              <div class="card-image-top">
                <%= attachment_image_tag cd, :image, :fill, 200,200, format: 'jpeg', fallback: "no_image.png" , size:"200x200"%>
              </div>
              <div class="card-body">
                <h5 class="card-text">¥<%= cd.price %></h5>
                <p class="card-text"><%= cd.status %></p>
                <%= link_to "詳細", new_cart_item_path(cd.id), class:"btn" %>
              </div>
            </div>
          </div>
          <% end %>
        </div>
        <%= paginate @cds, class: "paginate" %>
    </div>
  </div>
</div>

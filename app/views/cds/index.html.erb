<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
<div style="background-image:url(<%= asset_path "cd_image_2.jpeg" %>)", class="welcome">
</div>
<div class="index-content">
  <div class="container">
    <div class="row">
      <div class="row">
        <div class="search">
          <%= search_form_for @q, :url => { :controller => :cds, :action => :index } do |f| %>
            <%= f.search_field :name_cont %>
            <%= f.submit 'æ¤œç´¢' %>
          <% end %>
        </div>
      </div>
      <h1 class="header">List</h1>
        <% @cds.each do |cd| %>
          <div class="col-xs-3">
            <%= link_to (new_cart_item_path(cd.id)) do %>
              <%= attachment_image_tag cd, :image, :fill, 200,200, format: 'jpeg', fallback: "no_image.png" , size:"200x200"%><br>
            <% end %>
            <%= cd.name %>
          </div>
          <% end %>
        <%= paginate @cds, class: "paginate" %>
    </div>
  </div>
</div>
